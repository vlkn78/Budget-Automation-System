@model IEnumerable<ProjeAyuDeneme.ViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">
                    <i class="fas fa-plus"></i> Yeni Kullanıcı Kaydet
                </a>
            </div>
            <div class="col-sm-6 text-right">
          
                
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Sistemdeki Tüm Kullanıcılar</h3>
                    </div>
                    <div class="card-body">
                        @* AdminLTE DataTables için id="example1" ve class="table table-bordered table-striped" kritik *@
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    @* Yeni Alanları Ekliyoruz *@
                                    <th>Ad Soyad</th>
                                    <th>Birim</th>
                                    <th>Pozisyon</th>
                                    <th>Mevcut Rol</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>

                                        @* Yeni Alanları Gösteriyoruz *@
                                        <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Birim)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Pozisyon)</td>

                                        <td>
                                            @* Rol Rozeti (Badge) *@
                                            @{
                                                var badgeClass = item.CurrentRole == "Admin" ? "bg-danger" : "bg-primary";
                                            }
                                            <span class="badge @badgeClass">@Html.DisplayFor(modelItem => item.CurrentRole)</span>
                                        </td>
                                        <td>
                                            @* Buradaki aksiyonu KullaniciDuzenle olarak düzeltiyoruz *@
                                            <a asp-controller="Admin" asp-action="RolDuzenle" asp-route-id="@item.UserId" class="btn btn-sm btn-info">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @* DataTables'ı başlatmak için gereken kod (Bu scriptlerin JS dosyalarının _Layout'ta yüklü olduğunu varsayar) *@
    <script>
        $(function () {
            // DataTables başlatma (example1 ID'li tablo için)
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                // Türkçe dil desteği için CDN kullanabilirsiniz
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                }
                // Düğmeler (buttons) için eklentileri yüklediyseniz bu satırı aktif edebilirsiniz:
                // "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            });
        });
    </script>
}