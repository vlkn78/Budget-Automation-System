@model ProjeAyuDeneme.ViewModels.UserRoleViewModel

@{
    //ViewData["Title"] = "Kullanıcı Rolü Düzenle";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title text-primary">Kullanıcı Bilgileri</h6>

            </div>
            <div class="card-body">
                <!-- ViewModel'daki yeni alanları göstermek için dl listesini güncelledik -->
                <dl class="row mb-4">
                    <dt class="col-sm-3">Adı Soyadı:</dt>
                    <dd class="col-sm-9">@Model.AdSoyad</dd>

                    <dt class="col-sm-3">E-posta:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Birimi:</dt>
                    <dd class="col-sm-9">@Model.Birim</dd>

                    <dt class="col-sm-3">Pozisyonu:</dt>
                    <dd class="col-sm-9">@Model.Pozisyon</dd>

                    <dt class="col-sm-3">Mevcut Rol:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary fs-6">
                            @Model.CurrentRole
                        </span>
                    </dd>
                </dl>

                <hr />

                <h4 class="card-title text-primary mt-4">Yeni Rol Atama</h4>
                <form asp-action="RolDuzenle" method="post" class="mt-3">
                    <input type="hidden" asp-for="UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <div class="col-md-6">

                            <select asp-for="SelectedRole" class="form-select">
                            <option value="">- Ekle/ Kaldır -</option>
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        </div>
                        <span asp-validation-for="SelectedRole" class="text-danger"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <a asp-action="KullaniciListesi" class="btn btn-secondary me-2">İptal / Geri Dön</a>
                        <button type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

