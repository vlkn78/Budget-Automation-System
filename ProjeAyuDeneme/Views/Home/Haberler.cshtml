@model List<ProjeAdin.Models.Article>
@* Namespace: ProjeAyuDeneme.Models *@

@{
    ViewData["Title"] = "Global Haberler";
    string secili = ViewBag.SeciliKaynak as string;
}

<div class="container mt-4">

    <div class="text-center mb-4">
        <h2 class="display-6 fw-bold">🌍 Türkiye Gündemi</h2>
        <p class="text-muted">Global basında çıkan Türkiye haberlerini kaynaklara göre filtreleyebilirsiniz.</p>
    </div>

    <div class="d-flex justify-content-center flex-wrap mb-4 gap-2">
        <a href="/Home/Haberler?kaynak=hepsi" class="btn @(secili == "hepsi" ? "btn-dark" : "btn-outline-dark") rounded-pill">Tümü</a>

        <a href="/Home/Haberler?kaynak=nytimes" class="btn @(secili == "nytimes" ? "btn-dark" : "btn-outline-dark") rounded-pill">New York Times</a>
        <a href="/Home/Haberler?kaynak=washingtonpost" class="btn @(secili == "washingtonpost" ? "btn-dark" : "btn-outline-dark") rounded-pill">Washington Post</a>

        <a href="/Home/Haberler?kaynak=bbc" class="btn @(secili == "bbc" ? "btn-danger" : "btn-outline-danger") rounded-pill">BBC News</a>
        <a href="/Home/Haberler?kaynak=independent" class="btn @(secili == "independent" ? "btn-secondary" : "btn-outline-secondary") rounded-pill">Independent</a>

        <a href="/Home/Haberler?kaynak=bloomberg" class="btn @(secili == "bloomberg" ? "btn-success" : "btn-outline-success") rounded-pill">Bloomberg</a>
        <a href="/Home/Haberler?kaynak=aljazeera" class="btn @(secili == "aljazeera" ? "btn-warning" : "btn-outline-warning") rounded-pill">Al Jazeera</a>
    </div>

    @if (ViewBag.Uyari != null)
    {
        <div class="alert alert-warning text-center">@ViewBag.Uyari</div>
    }

    <div class="row">
        @foreach (var haber in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div style="height: 200px; overflow: hidden; background-color: #eee; position: relative;">
                        <img src="@haber.UrlToImage"
                             class="card-img-top"
                             alt="Haber"
                             style="object-fit: cover; height: 100%; width: 100%;"
                             onerror="this.onerror=null; this.src='https://images.pexels.com/photos/3944454/pexels-photo-3944454.jpeg?auto=compress&cs=tinysrgb&w=600';">

                        <span class="position-absolute top-0 end-0 badge bg-danger m-2">@haber.Source.Name</span>
                    </div>

                    <div class="card-body">
                        <h6 class="fw-bold">
                            <a href="@haber.Url" target="_blank" class="text-decoration-none text-dark">@haber.Title</a>
                        </h6>
                        <small class="text-muted">@haber.PublishedAt.ToString("dd MMM yyyy")</small>
                        <div class="mt-3">
                            <a href="@haber.Url" target="_blank" class="btn btn-sm btn-outline-secondary w-100">Habere Git</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>