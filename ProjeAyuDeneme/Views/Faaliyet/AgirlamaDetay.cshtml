@using System.Globalization
@model ProjeAyuDeneme.Models.Agirlama

@{
    ViewData["Title"] = "Ağırlama Detayı";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Model.Kurum (@Model.Sehir)</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ofis</dt>
            <dd class="col-sm-9">@Model.Ofis.Ad</dd>

            <dt class="col-sm-3">Ülke</dt>
            <dd class="col-sm-9">@Model.Ulke</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.Tarih.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">Ağırlanan Kişi Sayısı</dt>
            <dd class="col-sm-9">@Model.Adet</dd>

            <dt class="col-sm-3">Maliyet</dt>
            <dd class="col-sm-9">@Model.Degeri.ToString("C", new CultureInfo("tr-TR"))</dd>

            <dt class="col-sm-3">Tertip</dt>
            <dd class="col-sm-9">@Model.Tertip</dd>

            <dt class="col-sm-3">Kapsam</dt>
            <dd class="col-sm-9">@Model.Kapsam</dd>

            <dt class="col-sm-3">Sonuç</dt>
            <dd class="col-sm-9">@Model.Sonuc</dd>

            <dt class="col-sm-3">Kaydı Giren Kullanıcı</dt>
            <dd class="col-sm-9">@Model.User.UserName</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="AgirlamaListesi" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>
</div>