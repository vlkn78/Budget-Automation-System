@model IEnumerable<ProjeAyuDeneme.Models.KulturSanat>
@using System.Globalization

@{
    ViewData["Title"] = "Kültür-Sanat Faaliyetleri Listesi";
    var trCulture = new CultureInfo("tr-TR");
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="KulturSanatEkle" class="btn btn-primary">Yeni Kayıt Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ofis Adı</th>
            <th>Etkinlik</th>
            <th>Tarih</th>
            <th>Katılımcı Sayısı</th>
            <th class="text-end">Maliyet</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ofis.Ad</td>
                <td>@item.Etkinlik</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                <td>@item.Kisi</td>
                <td class="text-end">@item.Degeri.ToString("C", trCulture)</td>
                <td class="text-end">
                    <a asp-action="KulturSanatDetay" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>