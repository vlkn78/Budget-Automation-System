@model ProjeAyuDeneme.ViewModels.FuarAnalizViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Fuar Faaliyetleri Analizi";
    var trCulture = new CultureInfo("tr-TR");
}

<!-- BAŞLIK VE PDF BUTONU -->
<div class="d-flex justify-content-between align-items-center mb-4 no-print">
    <h1>@ViewData["Title"]</h1>
    <button id="printReport" class="btn btn-primary"><i class="fas fa-print me-2"></i> Raporu Yazdır</button>
</div>
<hr class="no-print" />

<!-- RAPOR İÇERİĞİ (YAZDIRILACAK ALAN) -->
<div id="printableArea">

    <!-- Rapor Başlığı (Sadece yazdırma sırasında görünecek) -->
    <div class="print-only mb-4 text-center">
        <h4>Fuar Faaliyetleri Genel Analiz Raporu</h4>
        <p>Tarih: @DateTime.Now.ToString("dd.MM.yyyy")</p>
    </div>

    @if (Model.ToplamFuarSayisi > 0)
    {
        <!-- DÜZELTME: Kartları ortalamak ve boyutlandırmak için yeni bir dış konteyner ekliyoruz -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- ANA GÖSTERGELER KARTI -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Genel Performans</h3>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4 border-end">
                                <h3 class="fw-bold mb-0">@Model.ToplamFuarSayisi</h3>
                                <span class="text-muted">Toplam Fuar</span>
                            </div>
                            <div class="col-4 border-end">
                                <h3 class="fw-bold mb-0">@Model.ToplamMaliyet.ToString("C0", trCulture)</h3>
                                <span class="text-muted">Toplam Maliyet</span>
                            </div>
                            <div class="col-4">
                                <h3 class="fw-bold mb-0">@Model.ToplamKatilimci.ToString("N0", trCulture)</h3>
                                <span class="text-muted">Toplam Katılımcı</span>
                            </div>
                        </div>
                        <hr />
                        <div class="row text-center mt-4">
                            <div class="col-6 border-end">
                                <h3 class="fw-bold mb-0">@Model.ToplamStandM2.ToString("N0", trCulture) <small>m²</small></h3>
                                <span class="text-muted">Toplam Stand Alanı</span>
                            </div>
                            <div class="col-6">
                                <h3 class="fw-bold mb-0">@Model.ToplamHaberSayisi.ToString("N0", trCulture)</h3>
                                <span class="text-muted">Toplam Haber Sayısı</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ORTALAMALAR KARTI -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Analitik Değerler</h3>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Fuar Başına Ortalama Maliyet</span>
                            <span class="fw-bold">@Model.FuarBasinaOrtalamaMaliyet.ToString("C", trCulture)</span>
                        </div>
                        <div class="progress mb-3" style="height: 5px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>m² Başına Ortalama Maliyet</span>
                            <span class="fw-bold">@Model.MetrekareBasinaOrtalamaMaliyet.ToString("C", trCulture)</span>
                        </div>
                        <div class="progress mb-3" style="height: 5px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 45%" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Fuar Başına Ortalama Haber</span>
                            <span class="fw-bold">@Model.FuarBasinaOrtalamaHaber.ToString("N1", trCulture)</span>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Henüz analiz edilecek fuar kaydı bulunmamaktadır.
        </div>
    }
</div>

@section Scripts {
    <script>
        // PDF Butonuna tıklandığında çalışacak JavaScript kodu
        document.getElementById('printReport').addEventListener('click', function () {
            var printContents = document.getElementById('printableArea').innerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload();
        });
    </script>

    <style>
        .print-only {
            display: none;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            .print-only {
                display: block;
            }

            body {
                margin: 2cm;
            }

            .card {
                box-shadow: none !important;
                border: 1px solid #dee2e6 !important;
                page-break-inside: avoid;
            }
        }
    </style>
}