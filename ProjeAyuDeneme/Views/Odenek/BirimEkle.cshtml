@model IEnumerable<ProjeAyuDeneme.Models.Ofis>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Yeni Ofis Ekle</h5>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">

                <form asp-action="BirimEkle" method="post">
                    <div class="mb-3">
                        <label for="ofisAdiInput" class="form-label">Ofis Adı</label>
                        <input type="text" name="Ad" class="form-control" id="ofisAdiInput" placeholder="Ofis adı giriniz" required>
                    </div>
                    <div class="d-flex justify-content-start">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Ofis Listesi</h5>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ofis Ad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var ofis in Model){
                                <tr>
                                    <th scope="row">@ofis.Id</th>
                                    <td>@ofis.Ad</td>
                                    <td> <a asp-action="BirimGuncelle" asp-route-id="@ofis.Id" class="btn btn-sm btn-info">Güncelle</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>