@model IEnumerable<ProjeAyuDeneme.Models.Odenek>
@using System.Globalization

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Güncel Ödenek Listesi</h5>
                <div class="card-tools">
                  
                    <div class="btn-group">
                   
                       
                    </div>
                    <button type="button" class="btn btn-tool" data-lte-toggle="card-remove">
                  
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <!--begin::Row-->
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Ofis</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Tertip</th>
                                <th scope="col">Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var item in Model){
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Ofis.Ad</td>
                                <td>@item.Tarih</td>
                                <td>@item.Tertip</td>
                                <td>@item.Tutar.ToString("C", new CultureInfo("tr-TR"))</td>
                                <td><a asp-action="OdenekDuzenle" asp-controller="Odenek" asp-route-id="@item.Id" class="btn btn-sm btn-info"> <i class="fas fa-edit"></i> Düzenle </a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!--end::Row-->
            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>